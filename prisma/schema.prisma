generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"


  url      = env("DATABASE_URL")
}

model Planta {
  id        Int    @id @default(autoincrement())
  nombre    String
  jefePlanta String
  pacientes Paciente[]
  @@map("plantas")
}

model Paciente {
  id               Int      @id @default(autoincrement())
  nombre           String
  fechaNacimiento  DateTime
  planta           Planta   @relation(fields: [plantaId], references: [id])
  plantaId         Int
  medicinas        PacienteMedicina[]
  @@map("pacientes")
}

model Medicina {
  id     Int    @id @default(autoincrement())
  nombre String
  via    String
  pacientes PacienteMedicina[]
  @@map("medicinas")
}

// tabla relacion n:m
model PacienteMedicina {
  paciente  Paciente @relation(fields: [pacienteId], references: [id])
  pacienteId Int
  medicina  Medicina @relation(fields: [medicinaId], references: [id])
  medicinaId Int
  @@id([pacienteId, medicinaId])
}